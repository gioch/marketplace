<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Seller</th>
    <th class="center">Date Purchased</th>
  </tr>

  <% orders.each do |order| %>
    <tr>
      <!-- 'Law of Demeter' perfectly implemented here -->
      <td class="center"><%= image_tag order.product_image_url(:thumb) %></td>
      <td class="center"><%= order.product_name %></td>
      <td class="center"><%= number_to_currency(order.product_price) %></td>
      <td class="center"><%= show_user_name(order, is_seller) %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>
